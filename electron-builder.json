{
  "appId": "com.lyleo.anki-card-generator",
  "asarUnpack": [
    "**/node_modules/better-sqlite3/**/*",
    "**/node_modules/node-edge-tts/**/*"
  ],
  "files": [
    "dist-electron",
    "dist-react",
    "!node_modules/@tailwindcss/oxide-wasm32-wasi/**/*"
  ],
  "extraResources": ["dist-electron/preload.cjs", "src/assets/**"],
  "directories": {
    "buildResources": "build"
  },
  "icon": "spacekat.jpg",
  "mac": {
    "target": "dmg"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "category": "Utility",
    "icon": "spacekat.jpg"
  },
  "win": {
    "target": ["portable", "msi"],
    "icon": "spacekat.ico"
  }
}
