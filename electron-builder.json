{
  "appId": "com.lyleo.anki-card-generator",
  "asarUnpack": [
    "**/node_modules/better-sqlite3/**/*",
    "**/node_modules/node-edge-tts/**/*"
  ],
  "files": ["dist-electron", "dist-react"],
  "extraResources": ["dist-electron/preload.cjs", "src/assets/**"],
  "icon": "./spacekat.ico",
  "mac": {
    "target": "dmg"
  },
  "linux": {
    "target": "AppImage",
    "category": "Utility"
  },
  "win": {
    "target": ["portable", "msi"]
  }
}
